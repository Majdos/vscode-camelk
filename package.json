{
	"name": "vscode-camelk",
	"displayName": "vscode-camelk",
	"description": "VS Code extensions to support Camel-K functionality",
	"version": "0.0.1",
	"publisher": "camel-tooling",
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension",
	"contributes": {
		"commands": [
			{
				"command": "camelk.runfile",
				"title": "Run file with Camel-K"
			},
			{
				"command": "camelk.stopfile",
				"title": "Stop Camel-K integration"
			},
			{
				"command": "integrations.refresh",
				"title": "Refresh"
			},
			{
				"command": "integrations.remove",
				"title": "Remove"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "camelk.runfile",
					"when": "resourceExtname == .groovy",
					"group": "navigation"
				},
				{
					"command": "camelk.stopfile",
					"when": "resourceExtname == .groovy",
					"group": "navigation"
				}
			],
			"view/title": [
				{
				  "command": "integrations.refresh",
				  "group": "navigation",
				  "when": "view == integrations",
				  "icon": {
					"dark": "resources/dark/refresh.svg",
					"light": "resources/light/refresh.svg"
					}  
				}
			],
			"view/item/context": [
				{
					"command": "integrations.remove",
					"group": "1",
					"when": "view == integrations"
				}
			]
		},
		"views": {
			"explorer": [
				{
					"id": "integrations",
					"name": "Camel-K Integrations"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^2.6.1",
		"vscode": "^1.1.6",
		"tslint": "^5.8.0",
		"@types/node": "^7.0.43",
		"@types/mocha": "^2.2.42"
	},
	"dependencies": {
		"child_process": "^1.0.2",
		"path":"^0.12.7"
	}
}
